# Database Configuration
SDRTRUNK_DATABASE_URL=postgresql://sdrtrunk:sdrtrunk_dev_password@localhost:5432/sdrtrunk_transcriber

# API Server Configuration
SDRTRUNK_SERVER_HOST=0.0.0.0
SDRTRUNK_SERVER_PORT=8080

# File Monitoring Configuration
SDRTRUNK_WATCH_DIR=/tmp/sdrtrunk/watch
SDRTRUNK_ARCHIVE_DIR=/tmp/sdrtrunk/archive
SDRTRUNK_FAILED_DIR=/tmp/sdrtrunk/failed
SDRTRUNK_TEMP_DIR=/tmp/sdrtrunk/temp

# Storage Configuration
SDRTRUNK_STORAGE_UPLOAD_DIR=/tmp/sdrtrunk/uploads
SDRTRUNK_STORAGE_MAX_FILE_SIZE=104857600  # 100MB

# Security Configuration
SDRTRUNK_SECURITY_REQUIRE_API_KEY=false
SDRTRUNK_SECURITY_ALLOWED_IPS=

# Logging Configuration
SDRTRUNK_LOG_LEVEL=info
SDRTRUNK_LOG_FORMAT=json

# Processing Configuration
SDRTRUNK_PROCESSING_BATCH_SIZE=10
SDRTRUNK_PROCESSING_WORKERS=4
SDRTRUNK_PROCESSING_TIMEOUT_SECONDS=300